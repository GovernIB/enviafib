<?xml version="1.0" encoding="UTF-8" ?>

<!-- FITXER AUTOGENERAT -->
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="enviafibPU" transaction-type="JTA">
        <provider>es.caib.enviafib.hibernate.CustomHibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/enviafibDS</jta-data-source>
        
		<class>es.caib.enviafib.persistence.FitxerJPA</class>
		<class>es.caib.enviafib.persistence.IdiomaJPA</class>
		<class>es.caib.enviafib.persistence.InfoArxiuJPA</class>
		<class>es.caib.enviafib.persistence.InfoSignaturaJPA</class>
		<class>es.caib.enviafib.persistence.PeticioJPA</class>
		<class>es.caib.enviafib.persistence.PluginJPA</class>
		<class>es.caib.enviafib.persistence.SerieDocumentalJPA</class>
		<class>es.caib.enviafib.persistence.TraduccioJPA</class>
		<class>es.caib.enviafib.persistence.TraduccioMapJPA</class>
		<class>es.caib.enviafib.persistence.UsuariJPA</class>

        <!-- Activar cache només per aquelles entitats on volguem expressament -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <!-- Sempre activar la validació de les propietats -->
        <validation-mode>CALLBACK</validation-mode>

    </persistence-unit>
</persistence>